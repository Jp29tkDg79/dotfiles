# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.md]
indent_size = 4
max_line_length = 0
trim_trailing_whitespace = false

[*.{py,lua}]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 80

[{Makefile,go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 4
tab_width = 4

[*.java]
max_line_length = 100

[Dockerfile]
indent_size = 4
